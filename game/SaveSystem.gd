func _try_alternative_save():
	# –ê–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–µ –ø—É—Ç–∏ –¥–ª—è —Ä–∞–∑–Ω—ã—Ö –ø–ª–∞—Ç—Ñ–æ—Ä–º
	var alt_paths = []
	
	match OS.get_name():
		"Windows", "macOS", "X11":
			# –î–ª—è –¥–µ—Å–∫—Ç–æ–ø–æ–≤ –ø—Ä–æ–±—É–µ–º user:// –∫–∞–∫ –∑–∞–ø–∞—Å–Ω–æ–π –≤–∞—Ä–∏–∞–Ω—Ç
			alt_paths.append("user://" + SAVE_FILENAME)
			alt_paths.append("user://backup_" + SAVE_FILENAME)
		_:
			# –î–ª—è –º–æ–±–∏–ª—å–Ω—ã—Ö –ø—Ä–æ–±—É–µ–º backup
			alt_paths.append("user://backup_" + SAVE_FILENAME)
	
	for alt_path in alt_paths:
		var file = FileAccess.open(alt_path, FileAccess.WRITE)
		if file:
			var save_data = {
				"player_stats": _get_player_stats_data(),
				"player_position": _get_player_position(),
				"achievements": _get_achievements_data(),
				"game_time": Time.get_ticks_msec(),
				"version": "1.0",
				"platform": OS.get_name(),
				"is_backup": true,
				"original_path": SAVE_PATH
			}
			var json = JSON.stringify(save_data, "\t")
			file.store_string(json)
			file.close()
			print("üîÑ –ò–≥—Ä–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∞ –≤ –∞–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–π –ø—É—Ç—å: " + alt_path)
			has_valid_save = true
			break

func load_game() -> bool:
	debug_save_info()
	
	# –°–Ω–∞—á–∞–ª–∞ –ø—Ä–æ–±—É–µ–º –æ—Å–Ω–æ–≤–Ω–æ–π –ø—É—Ç—å
	if FileAccess.file_exists(SAVE_PATH):
		print("–ù–∞–π–¥–µ–Ω –æ—Å–Ω–æ–≤–Ω–æ–π —Ñ–∞–π–ª —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è")
		var success = _load_from_path(SAVE_PATH)
		if success:
			has_valid_save = true
		return success
	
	# –ü—Ä–æ–±—É–µ–º –∞–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–µ –ø—É—Ç–∏
	var alt_paths = [
		"user://backup_zpg_savegame.save",
		"user://zpg_savegame.save",
		"user://savegame.save"
	]
	
	for alt_path in alt_paths:
		if FileAccess.file_exists(alt_path):
			print("–ù–∞–π–¥–µ–Ω –∞–ª—å—Ç–µ—Ä–Ω–∞—Ç–∏–≤–Ω—ã–π —Ñ–∞–π–ª —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è: " + alt_path)
			SAVE_PATH = alt_path
			var success = _load_from_path(alt_path)
			if success:
				has_valid_save = true
			return success
	
	print("–§–∞–π–ª —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è –Ω–µ –Ω–∞–π–¥–µ–Ω: " + SAVE_PATH)
	has_valid_save = false
	return false

func can_load_game() -> bool:
	# –ü—Ä–æ–≤–µ—Ä—è–µ–º –º–æ–∂–Ω–æ –ª–∏ –∑–∞–≥—Ä—É–∑–∏—Ç—å –∏–≥—Ä—É
	return has_valid_save

func _load_from_path(path: String) -> bool:
	var file = FileAccess.open(path, FileAccess.READ)
	if file:
		var json = file.get_as_text()
		file.close()
		
		var json_object = JSON.new()
		var error = json_object.parse(json)
		if error == OK:
			var save_data = json_object.data
			_apply_save_data(save_data)
			print("–ò–≥—Ä–∞ –∑–∞–≥—Ä—É–∂–µ–Ω–∞: " + path)
			return true
		else:
			push_error("–û—à–∏–±–∫–∞ –ø–∞—Ä—Å–∏–Ω–≥–∞ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏—è: " + path)
	return false

